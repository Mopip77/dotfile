function p() {
    local port=${1:-7890}
    export https_proxy=http://127.0.0.1:$port http_proxy=http://127.0.0.1:$port no_proxy=127.0.0.1,localhost,local,.local,10.10.0.0/16,192.168.60.245/16
    export HTTPS_PROXY=http://127.0.0.1:$port HTTP_PROXY=http://127.0.0.1:$port NO_PROXY=127.0.0.1,localhost,local,.local,10.10.0.0/16,192.168.60.245/16
}

