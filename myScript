    export HTTPS_PROXY=socks5h://127.0.0.1:$port HTTP_PROXY=socks5h://127.0.0.1:$port NO_PROXY=127.0.0.1,localhost,local,.local,10.10.0.0/16,192.168.60.245/16
}

