{
  "env": {},
  "permissions": {
    "allow": [
      "Bash(mvn:*)",
      "Bash(curl:*)",
      "Bash(mkdir:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": []
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "toast-cli -t \"等待输入！\" -p B -d 1 -i ~/.dotfiles/config/my-scripts/assets/claude-color.svg"
          },
          {
            "type": "command",
            "command": "open raycast://confetti > /dev/null 2>&1 &"
          },
          {
            "type": "command",
            "command": "~/.myjiaoben/send_ntfy.sh \"Claude Code\" \"等待输入 $CLAUDE_PROJECT_DIR\" \"https://i.gsxcdn.com/3347504880_bgbu4jyu.png\" > /dev/null 2>&1 &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "toast-cli -t \"执行完成！\" -p B -d 1 -i ~/.dotfiles/config/my-scripts/assets/claude-color.svg"
          },
          {
            "type": "command",
            "command": "open raycast://confetti > /dev/null 2>&1 &"
          },
          {
            "type": "command",
            "command": "~/.myjiaoben/send_ntfy.sh \"Claude Code\" \"执行完成 $CLAUDE_PROJECT_DIR\" \"https://i.gsxcdn.com/3347504880_bgbu4jyu.png\" > /dev/null 2>&1 &"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "sql@gaotu-tools": true,
    "superpowers@claude-plugins-official": false
  },
  "alwaysThinkingEnabled": false
}
