{
  "env": {},
  "permissions": {
    "allow": [
      "Bash(mvn:*)",
      "Bash(curl:*)",
      "Bash(mkdir:*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'mkdir -p /tmp/claude-session-open && session_id=$(cat | jq -r .session_id) && echo $session_id > /tmp/claude-session-open/$PPID'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'rm -f /tmp/claude-session-open/$PPID'"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "toast-cli -t \"等待输入！\" -p B -d 1 -i ~/.dotfiles/config/my-scripts/assets/claude-color.svg"
          },
          {
            "type": "command",
            "command": "confetti-notifier --duration 1500 --text ⌨️ --textSize 4 --velocity 100 --particleCount 150 --spread 100 --location BL > /dev/null 2>&1 &"
          },
          {
            "type": "command",
            "command": "~/.myjiaoben/send_ntfy.sh \"Claude Code\" \"等待输入 $CLAUDE_PROJECT_DIR\" \"https://i.gsxcdn.com/3347504880_bgbu4jyu.png\" > /dev/null 2>&1 &"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "toast-cli -t \"执行完成！\" -p B -d 1 -i ~/.dotfiles/config/my-scripts/assets/claude-color.svg"
          },
          {
            "type": "command",
            "command": "confetti-notifier --duration 1500 --text  ⭐ --textSize 2 --velocity 100 --particleCount 150 --spread 100 --location BR > /dev/null 2>&1 &"
          },
          {
            "type": "command",
            "command": "~/.myjiaoben/send_ntfy.sh \"Claude Code\" \"执行完成 $CLAUDE_PROJECT_DIR\" \"https://i.gsxcdn.com/3347504880_bgbu4jyu.png\" > /dev/null 2>&1 &"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "sql@gaotu-tools": false,
    "typescript-lsp@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowUnixSockets": [
        "/var/run/docker.sock"
      ],
      "allowLocalBinding": true
    },
    "excludedCommands": [
      "docker"
    ]
  },
  "alwaysThinkingEnabled": false
}
